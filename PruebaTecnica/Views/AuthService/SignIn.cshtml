
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<!-- begin::Head -->
<head>
    <base href="~/">
    <meta http-equiv=”Content-Type” content=”text/html; charset=UTF-8″ />
    <title>Login</title>
    <meta name="description" content="Login">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!--begin::Fonts -->
    <link rel="stylesheet" href="@Url.Content("https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700|Roboto:300,400,500,600,700")">
    <!--end::Fonts -->
    <!--begin::Page Custom Styles(used by this page) -->
    <link href="@Url.Content("assets/css/pages/login/login-6.css")" rel="stylesheet" type="text/css" />
    <!--end::Page Custom Styles -->
    <!--begin::Global Theme Styles(used by all pages) -->
    <link href="@Url.Content("assets/plugins/global/plugins.bundle.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("assets/css/style.bundle.css")" rel="stylesheet" type="text/css" />
    <!--end::Global Theme Styles -->
    <link rel="shortcut icon" href="@Url.Content("Content/images/favicon.png")" />
</head>
<!-- end::Head -->
<!-- begin::Body -->
<body class="kt-quick-panel--right kt-demo-panel--right kt-offcanvas-panel--right kt-header--fixed kt-header-mobile--fixed kt-subheader--enabled kt-subheader--fixed kt-subheader--solid kt-aside--enabled kt-aside--fixed kt-page--loading">
    <!-- begin:: Page -->
    <div class="kt-grid kt-grid--ver kt-grid--root">
        <div class="kt-grid kt-grid--hor kt-grid--root  kt-login kt-login--v6 kt-login--signin" id="kt_login">
            <div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--desktop kt-grid--ver-desktop kt-grid--hor-tablet-and-mobile">
                <div class="kt-grid__item  kt-grid__item--order-tablet-and-mobile-2  kt-grid kt-grid--hor kt-login__aside">
                    <div class="kt-login__wrapper" style="padding:initial !important">
                        <div class="kt-login__container" style="padding-bottom:initial !important">
                            <div class="kt-login__body">
                                <div class="kt-login__signin">
                                    <div class="kt-login__head">
                                        <h3 class="kt-login__title">PRUEBA TECNICA MIGUEL AMEZQUITA CARRILLO</h3>
                                    </div>
                                    <div class="kt-login__form">
                                        <form class="kt-form" action="" method="post">
                                            <div class="form-group">
                                                <input class="form-control" type="text" placeholder="Usuario" name="usuario" value="@this.ViewData["usuario"]" autocomplete="off">
                                            </div>
                                            <div class="form-group">
                                                <input class="form-control form-control-last" type="password" placeholder="Contraseña" value="@this.ViewData["contrasenia"]" name="contrasenia">
                                            </div>
                                            <div class="kt-login__extra">
                                                <label class="kt-checkbox">
                                                    @*<input name="recordarcontrasenia" class="form-check-label cursor-pointer" type="checkbox" value="true" @(ViewData["recordarcontrasenia"] != null ? "checked" : "") />*@
                                                    <input type="checkbox" name="remember" value="true" @(ViewData["remember"] != null ? "checked" : "")>Recuérdame
                                                    <span></span>
                                                </label>
                                                <a href="javascript:;" id="kt_login_forgot">¿Olvidaste la contraseña?</a>
                                            </div>
                                            <div class="kt-login__actions">
                                                <button id="kt_login_signin_submit" class="btn btn-brand btn-pill btn-elevate">Iniciar Sesión</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="kt-login__forgot">
                                    <div class="kt-login__head">
                                        <h3 class="kt-login__title">¿Olvidaste la contraseña?</h3>
                                        <div class="kt-login__desc">Ingresa tu usuario para restablecer tu contraseña</div>
                                    </div>
                                    <div class="kt-login__form">
                                        <form class="kt-form" action="">
                                            <div class="form-group">
                                                <input class="form-control" type="text" placeholder="Usuario" name="email" id="kt_email" autocomplete="off">
                                            </div>
                                            <div class="kt-login__actions">
                                                <button id="kt_login_forgot_submit" class="btn btn-brand btn-pill btn-elevate">Enviar</button>
                                                <button id="kt_login_forgot_cancel" class="btn btn-outline-brand btn-pill">Cancelar</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="kt-grid__item kt-grid__item--fluid kt-grid__item--center kt-grid kt-grid--ver kt-login__content" style="background-image: url(Content/images/bg-4.jpg); background-size: 100% 100%;">
                </div>
            </div>
        </div>
    </div>
    <!-- end:: Page -->
    <!-- begin::Global Config(global config for global JS sciprts) -->
    <script>
        var KTAppOptions = {
            "colors": {
                "state": {
                    "brand": "#5d78ff",
                    "dark": "#282a3c",
                    "light": "#ffffff",
                    "primary": "#5867dd",
                    "success": "#34bfa3",
                    "info": "#36a3f7",
                    "warning": "#ffb822",
                    "danger": "#fd3995"
                },
                "base": {
                    "label": [
                        "#c5cbe3",
                        "#a1a8c3",
                        "#3d4465",
                        "#3e4466"
                    ],
                    "shape": [
                        "#f0f3ff",
                        "#d9dffa",
                        "#afb4d4",
                        "#646c9a"
                    ]
                }
            }
        };
    </script>
    <script src="@Url.Content("assets/plugins/global/plugins.bundle.js")" type="text/javascript"></script>
    <script src="@Url.Content("assets/js/scripts.bundle.js")" type="text/javascript"></script>
    <script src="@Url.Content("assets/js/pages/custom/login/login-general.js")" charset="UTF-8" type="text/javascript"></script>
</body>
<!-- end::Body -->
</html>
